{
  "name": "end2end-chat-client",
  "private": true,
  "version": "0.0.0",
  "description": "End-to-End Encrypted Chat Application with bundled Tor anonymity",
  "author": "End2End Chat Team",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently -k --success=first -n vite,electron -c cyan,green \"vite\" \"wait-on http://localhost:5173 && NODE_ENV=development pnpm exec electron .\"",
    "dev:electron": "concurrently -k --success=first -n vite,electron -c cyan,green \"vite\" \"wait-on http://localhost:5173 && NODE_ENV=development pnpm exec electron .\"",
    "dev:vite-only": "vite",
    "vite": "vite",
    "build": "vite build --config vite.config.simple.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently -n vite,electron -c cyan,green \"vite\" \"wait-on http://localhost:5173 && NODE_ENV=development pnpm exec electron .\"",
    "prepare-tor": "bash scripts/prepare-tor-bundles.sh",
    "electron-build": "npm run prepare-tor && npm run build && electron-builder",
    "electron-build-no-tor": "npm run build && electron-builder",
    "dist": "npm run prepare-tor && npm run build && electron-builder --publish=never",
    "dist-no-tor": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@dhaiwat10/react-link-preview": "^1.15.0",
    "@noble/ciphers": "^2.0.0",
    "@noble/curves": "^1.9.7",
    "@noble/hashes": "^1.6.0",
    "@noble/post-quantum": "^0.4.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@types/node": "^20.11.19",
    "argon2-wasm": "^0.9.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "github-markdown-css": "^5.8.1",
    "hast-util-sanitize": "^5.0.2",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.22",
    "linkify-react": "^4.1.3",
    "lucide-react": "^0.344.0",
    "mlkem": "^2.5.0",
    "next-themes": "^0.4.4",
    "pako": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "socks-proxy-agent": "^8.0.5",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "tar": "^6.2.1",
    "uuid": "^11.0.8",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@types/pako": "^2.0.3",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.end2endchat",
    "productName": "End-to-End Chat",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!electron/.gitignore", 
      "node_modules/**/*",
      "config/package.json",
      "package.json"
    ],
    "extraResources": [
      "tor-bundles/**/*"
    ],
    "asarUnpack": [
      "tor-bundles/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
