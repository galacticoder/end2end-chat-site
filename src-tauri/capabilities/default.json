{
    "$schema": "https://schema.tauri.app/capability/1",
    "identifier": "default",
    "description": "Default capability for the app",
    "windows": [
        "*"
    ],
    "permissions": [
        "core:default",
        "shell:default",
        "fs:default",
        "fs:default",
        "notification:default",
        "notification:allow-is-permission-granted",
        "dialog:default",
        {
            "identifier": "fs:scope",
            "allow": [
                "$APPDATA/**",
                "$DOWNLOAD/**",
                "$HOME/.config/Qor-chat-client/**"
            ],
            "deny": [
                "$HOME/.ssh/**",
                "$HOME/.gnupg/**"
            ]
        }
    ]
}